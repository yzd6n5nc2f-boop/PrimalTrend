# Server
PORT=4000
PUBLIC_SITE_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Database
DATABASE_PATH=./data/primaltrend.db

# Stripe
STRIPE_SECRET_KEY=sk_test_...
# Optional for webhook handling
STRIPE_WEBHOOK_SECRET=whsec_...

# Checkout settings
CHECKOUT_CURRENCY=gbp
# Enable Stripe automatic tax (requires Stripe Tax setup)
CHECKOUT_TAX_ENABLED=true
# Require billing address on checkout
CHECKOUT_BILLING_ADDRESS_REQUIRED=true
# Comma-separated list of allowed shipping countries
CHECKOUT_SHIPPING_COUNTRIES=GB
# Free shipping threshold in GBP
SHIPPING_FREE_THRESHOLD=60
# Flat rate shipping below threshold in GBP
SHIPPING_FLAT_RATE=4.95

# Optional checkout overrides
CHECKOUT_SUCCESS_URL=http://localhost:3000/cart?status=success
CHECKOUT_CANCEL_URL=http://localhost:3000/cart?status=cancel
